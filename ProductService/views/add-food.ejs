<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Add New User</h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="http://localhost:9601/meal-api/v1/food/add-food" method="post" id="add-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="type"></label>
                                    <select name="ofType" class="form-control form-control-lg" required>
                                        <option value="">Select Type</option>
                                        <option value="Soup">Soup</option>
                                        <option value="Swallow">Swallow</option>
                                        <option value="SingleFood">SingleFood</option>
                                        <option value="Protien">Protien</option>
                                        <option value="Snacks">Snacks</option>
                                        <option value="Drinks">Drinks</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="price">Price</label>
                                    <input type="number" name="price" class="form-control form-control-lg" placeholder="Enter price" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="desc">Description</label>
                                    <input type="text" name="desc" class="form-control form-control-lg" placeholder="Enter Description" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Select Image</label>
                                    <input type="file" name="image" class="form-control form-control-lg" required/>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit" value="Add Food" class="btn btn-primary btn-lg" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>


