<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message){ %>
                <div class="alert alert-dismissible fade show alert-<%=message.type%>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <%} %>
            <div class="table-responsive">
                <% if (food != '') { %>
                    <table class="table table-striped text-center mt-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Price</th>
                                <th>Discount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% food.forEach((row, index) => { %>
                                <tr>
                                    <td><%= index %></td> 
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.ofType %></td>
                                    <td><%= row.price %></td>
                                    <td><%= row.discount %></td>
                                    <td>
                                        <a href="http://localhost:9601/meal-api/v1/food/add-to-cart/<%= row._id %>" class="text-success"><i class="fas fa-plus-circle fa-lg mx-1"></i></a>
                                        <a href="http://localhost:9601/meal-api/v1/food/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="http://localhost:9601/meal-api/v1/food/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %> 
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Food Currently Available</h1> 
                <% } %>
                
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>


